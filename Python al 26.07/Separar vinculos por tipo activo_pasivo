import pandas as pd

# Leer el archivo TXT
df = pd.read_csv(r'E:\Usuarios\fgonzalez\OneDrive - bcp.gov.py\Escritorio\Vane\Fusion_1046\19 tanda\UenoVinculosModif.csv', sep=';', dtype={'Codigo Oficina': str})  # Ajusta el delimitador seg√∫n sea necesario

# Filtrar las filas
archivo1 = df[df['Codigo Tipo Operacion'] == 453]
archivo2 = df[df['Codigo Tipo Operacion'] % 2 == 0]
archivo3 = df[(df['Codigo Tipo Operacion'] % 2 != 0) & (df['Codigo Tipo Operacion'] != 453)]

# Guardar en archivos CSV
archivo1.to_csv(r'E:\Usuarios\fgonzalez\OneDrive - bcp.gov.py\Escritorio\Vane\Fusion_1046\19 tanda\Vinculos_Facilidades_Ueno.csv', index=False, sep=';')
archivo2.to_csv(r'E:\Usuarios\fgonzalez\OneDrive - bcp.gov.py\Escritorio\Vane\Fusion_1046\19 tanda\Vinculos_pasivo_Ueno.csv', index=False, sep=';')
archivo3.to_csv(r'E:\Usuarios\fgonzalez\OneDrive - bcp.gov.py\Escritorio\Vane\Fusion_1046\19 tanda\Vinculos_activo_Ueno.csv', index=False, sep=';')
